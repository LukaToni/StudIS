    body
        // Main Navigation
        header
            nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.red.scrolling-navbar
                a.navbar-brand(href='')
                    strong StudIS
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.nav.navbar-nav.nav-flex-icons.ml-auto
                        li.nav-item.dropdown
                            a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                i.fa.fa-user=" "+email
                            .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownMenuLink')
                                a.dropdown-item(href='/verify_token') Pojdi nazaj
                                a.dropdown-item(href='/logout') Odjava
        //p Vpisni list
        //p= "token:" + JSON.stringify(token)
        br
        br
        br
        br
        button.btn.btn-sm.btn-default#toPdfButton(onclick="html2pdf('potrdilo.pdf', '#potrdilo', '#toPdfButton');") Izvozi PDF

        #potrdilo(style="width:50%")
            div(style="float: left; width:  25%; line-height: 1;")
                span#name.s1= token.name+" "
                span#surname.s1= token.surname
                p#address.s1= token.street
                p#post-office.s1= token.post+" "+token.county
            div(style="float: right; width:  25%; line-height: 1;")
                p.s7 Večna pot 113
                p.s7
                    span(style=' color: #313138;') 1000 LJUBLJANA. Slovenija 
                p telefon 01 47 98100
                p.s7 www.fri.uni-lj.si
                p e-mail: dekanat@fri.uni-lj.si
                p.s2 Stevilka: 74891
                p.s2 Datum: 1.6.2018
            div(style='text-align:center')
                p.s3
                    | Univerza 
                    span.s4 v Ljubljani 
                    br
                    | Fakulteta 
                    span.s5 za 
                    span.s6 računalništvo 
                    br
                    span.s5 in informatiko
                p
                    img(width='41', height='80', src='https://imgur.com/NPLasof.jpg')
            br
            br
            br
            br
            div(style='text-align: center')
                h3 POTRDILO O VPISU
                br
                br
                table(style="width:60%;text-align:left")
                    tr
                        td Vpisna številka
                        td Priimek, Ime
                    tr
                        th= token.registration_number
                        th= token.surname+", "+token.name
                    tr
                        td Datum rojstva
                        td Država rojstva
                    tr
                        th= token.birth
                        th Slovenija
                br
                table(style="width:100%;text-align:left")
                    tr
                        td Študijsko leto
                        td Vrsta vpisa
                    tr    
                        th 2018/19  
                        th= token.enrol_type
                    tr
                        td Način in oblika študija
                        td Letnik/dodatno leto
                    tr
                        th= token.study_type                    
                        th= token.year+".letnik"
                    tr
                        td Študijski program
                        td Smer/usmeritev/modul/znanstveno področje
                    tr
                        th= token.programme_type
                        th -
                    tr
                        td Vrsta in stopnja študija
                    tr
                        th(colspan="2") 16204 Visokošolska univerzitetna izobrazba (prva bolonjska stopnja)

                br
                br
                br
                p
                    span
                        img(width='137', height='137', src='https://imgur.com/tKOCc1R.jpg')
                    br
                    span
                        img(width='125', height='37', src='https://imgur.com/ddYTp6l.jpg')
                p.s2 prof. dr. Bojan Orel
                p dekan

                                            
