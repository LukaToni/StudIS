doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title StudIS
        // Font Awesome
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        // Bootstrap core CSS
        link(href='../stylesheets/bootstrap.min.css', rel='stylesheet')
        // Material Design Bootstrap
        link(href='../stylesheets/mdb.min.css', rel='stylesheet')
        // Your custom styles (optional)
        //link(href='../stylesheets/style.css', rel='stylesheet')
        // Font awesome
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(href='../stylesheets/personal.css', rel='stylesheet')
    body
        // Main Navigation
        header
            nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.red.scrolling-navbar
                a.navbar-brand(href='')
                    strong StudIS
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.nav.navbar-nav.nav-flex-icons.ml-auto
                        li.nav-item.dropdown
                            a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                i.fa.fa-user=" "+email
                            .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownMenuLink')
                                a.dropdown-item(href='/personal') Pojdi nazaj
                                a.dropdown-item(href='/logout') Odjava
        .wrapper
            .container
                .row.mt-5.pt-5
                    .col
                        h1 Uredi žeton
                        //p= JSON.stringify(token)
                        form(action='update?tokenId='+tokenId, method='post')
                            legend Podatki študenta
                            .form-group
                                label(for='name') Ime
                                input#name.form-control(disabled, value=token.name)
                            .form-group
                                label(for='surname') Priimek
                                input#surname.form-control(disabled, value=token.surname)
                            .form-group
                                label(for='registration_number') Vpisna Številka
                                input#registration_number.form-control(disabled, name='registration_number' value=token.registration_number)
                            legend Parametri žetona
                            - var disabled = token.used == 1;
                            .form-group
                                label Leto
                                select.form-control(name='year', disabled=disabled)
                                    each year in years
                                        - var selected = year.value == token.year
                                        option(value=year.value, selected=selected)= year.name
                                    
                            .form-group
                                label Način vpisa
                                select.form-control(name='enrol_type', disabled=disabled)
                                    each enrol_type in enrol_types
                                        - var selected = enrol_type.value == token.enrol_type_key
                                        option(value=enrol_type.value, selected=selected)= enrol_type.name
                                        
                            .form-group
                                label Način Študija
                                select.form-control(name='study_type', disabled=disabled)
                                    each study_type in study_types
                                        - var selected = study_type.value == token.study_type_key
                                        option(value=study_type.value, selected=selected)= study_type.name
                                        
                            .form-group
                                label Študijski Program
                                select.form-control(name='study_programme', disabled=disabled)
                                    each study_programme in study_programmes
                                        - var selected = study_programme.value == token.study_programme_key
                                        option(value=study_programme.value, selected=selected)= study_programme.name
                                        
                            .form-group
                                label Posamezno izbiranje predmetov
                                select.form-control(name='average', disabled=disabled)
                                    each average_option in average_options
                                        - var selected = average_option.value == token.average
                                        option(value=average_option.value, selected=selected)= average_option.name
                                        
                            .form-check
                                label.form-check-label
                                    input.form-check-input(type='checkbox', name='used', checked=!!+token.used, disabled)
                                    |       Žeton uporabljen
                            .form-check
                                label.form-check-label
                                    input.form-check-input(type='checkbox', name='verified', checked=!!+token.verified, disabled)
                                    |       Žeton Potrjen
                            br
                            button.btn.btn-primary Potrdi Spremembe
                            a(href='tokens/list')
                                button.btn.btn-secondary Prekliči
                            br
                            br
                            br
                            br
                            br


                                            
